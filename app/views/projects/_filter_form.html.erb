<%= form_tag(projects_path, method: :get, id: "filter-form") do %>
    <%= select_tag(:yarn_size, options_for_select([['Superfine', 1], ['Fine', 2], ['Light', 3], ['Medium', 4], ['Bulky', 5], ['Super Bulky', 6], ['Jumbo', 7]]), {prompt: 'Yarn Weight'}) %>
    <%= select_tag(:hook_size, options_for_select([['2mm', 2], ['3mm', 3], ['4mm', 4], ['5mm', 5], ['6mm', 6], ['7mm', 7], ['8mm', 8], ['9mm', 9], ['10mm', 10], ['15mm', 15], ['16mm', 16], ['19mm', 19], ['25mm', 25]]), {prompt: 'Hook Size'}) %>
    <%= select_tag(:difficulty, options_for_select([['Beginner', 1], ['Intermediate', 2], ['Advanced', 3]]), {prompt: 'Difficulty Level'}) %>

  <%= submit_tag "Filter", class: "btn xl btn-outline-light" %>
  <% end %>