 
<div class="home_page_title">
<h3> Showing <%= @projects.count %> projects </h3>
</div>
 
<div class="search_and_filter">
  <div class="search_placement">
    <h3><%= render 'search_form' %></h3>
  </div>  
  <div class="filter_placement"
  <h3><%= render 'filter_form' %></h3>
  </div>
</div>
 
<div class="projects_index">
  <% @projects.each do |project| %>
      <div class="project_component"> 
      <% if !project.photo.nil? %>
        <%= cl_image_tag project.photo.key, height: 250, width: 250, crop: :fill%>
      <% end %> 
          <div class="overlay">
              <b>
                <%= link_to project.name, project_path(project) %>
              </b>
          </div>   
      </div>
  <% end %>
</div>
 
